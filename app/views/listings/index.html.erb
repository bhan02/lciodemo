<div class="jumbotron specialjum">
    <div class="over container body-content">
    <h1>We're bringing PD back.</h1>
    <h2>LearnCycle.io helps schools and PD providers get better, together.</h2>
    <br>
    <br>
    <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a></p>
  </div>
</div>  

<br>

<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <h4><%= "PD Topic: #{listing.pd_offering}" %></h4>
            <p><%= number_to_currency(listing.price) %></p>            
            <% if (user_signed_in?) && (current_user == listing.user) %>
            <% end %>  
          </div>   
           
      </div>    
    </div>  
  <% end %>
</div>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>  

