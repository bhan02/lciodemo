<div class="row">
	<div class="col-md-6">
		<div class="thumbnail">
			<%= image_tag @listing.image.url %>
		</div>
	</div>
	<div class="col-md-6">
		<h3><%= @listing.name %></h3>
		<br>
		<h6>Background</h6>
		<p><%= @listing.description %></p>
		<br>
		<h6>Expertise</h6>
		<p><%= @listing.expertise %></p>
		<br>
		<h6>PD Offering</h6>
		<p><%= @listing.pd_offering %></p>
		<br>
		<h6>Price</h6>
		<p><%= number_to_currency(@listing.price) %></p>
		<br>
		<div class="center">
			<%= link_to "Booking Request Form", new_listing_order_path(@listing), class: "btn btn-primary" %>
		</div>
	</div>

</div>	

<% if current_user == @listing.user %>
	<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %>
<% end %>	
<%= link_to 'Back', listings_path, class: "btn btn-link" %>
