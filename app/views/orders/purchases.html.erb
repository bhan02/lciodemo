<div class="center">
  <h2>Your Booking Request History</h2>
</div>
<br>

<table class="table table-striped table-bordered">
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>PD Offering</th>
    <th>Price</th>
    <th>Seller</th>
    <th>Date Requested</th>
  </tr>  

  <% @orders.each do |order| %>
    <tr>
      <td class="center"><%= image_tag order.listing.image.url(:thumb) %></td>
      <td><%= order.listing.name %></td>
      <td><%= order.listing.pd_offering %></td>
      <td><%= number_to_currency(order.listing.price) %></td>
      <td><%= order.seller.name %></td>
      <td><%= order.created_at.strftime("%B %-d, %Y") %></td>
    </tr>
  <% end %>
</table>  



<br>

<% if user_signed_in? %>
  <%= link_to 'Create New PD Listing', new_listing_path, class: "btn btn-link", data: { no_turbolink: true } %>
<% end %>  