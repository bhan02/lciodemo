<div class="container">
<div class="center">
  <h2>Your Bookings History</h2>
</div>
<br>

<table class="table table-striped table-bordered">
  <tr>
    <th>Image</th>
    <th>PD Offering</th>
    <th>Price</th>
    <th>Customer</th>
    <th>Customer Email</th>
    <th>School</th>
    <th>Booking Request Date</th>
  </tr>  

  <% @orders.each do |order| %>
    <tr>
      <td class="center"><%= image_tag order.listing.image.url(:thumb) %></td>
      <td><%= order.listing.pd_offering %></td>
      <td><%= number_to_currency(order.listing.price) %></td>
      <td><%= order.buyer.name %></td>
      <td><%= order.buyer.email %></td>
      <td><%= order.school %></td>
      <td><%= order.created_at.strftime("%B %-d, %Y") %></td>
    </tr>
  <% end %>
</table>  



<br>

<% if user_signed_in? %>
  <%= link_to 'Create New PD Offering', new_listing_path, class: "btn btn-link", data: { no_turbolink: true } %>
<% end %>  

</div>