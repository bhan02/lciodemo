<div class="center">
  <h2>Your Booking History</h2>
</div>  

<table class="table table-striped table-bordered">
  <tr>
    <th>Image</th>
    <th>PD Offering</th>
    <th>Price</th>
    <th>Customer</th>
    <th>Booking Request Date</th>
  </tr>  

  <% @bookings.each do |booking| %>
    <tr>
      <td><%= image_tag booking.listing.image.url(:thumb) %></td>
      <td><%= booking.listing.pd_offering %></td>
      <td><%= number_to_currency(booking.listing.price) %></td>
      <td><%= booking.buyer.name %></td>
      <td><%= booking.created_at.strftime("%B %-d, %Y") %></td>  
    </tr>
  <% end %>
</table>  

<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>  